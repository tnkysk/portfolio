<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h3><span class="label label-default">ログイン</span></h3>

      <br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <br>
        <br>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary btn-md" %>
        </div>
      <% end %>

      <br>
      <br>

      <h4><span class="label label-default">登録がお済みでない方</span></h4>
        <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録してください

    </div>
  </div>
</div>
