<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Profile</h2>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h4><%= @user.errors.count %>件のerrorが発生しました。</h4>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
          </div>
        <% end %>

        <%= form_for(@user) do |f| %>
          <b>Name</b>
          <br>
            <%= f.text_field :name, autofocus: true, size: "30x5" %>
          <br>
          <br>
          <b>Image</b>
            <%= f.attachment_field :profile_image %>
          <br>
          <br>
          <b>Introduction</b>
          <p>(50文字以下)</p>
            <%= f.text_area :introduction, size: "50x5" %>
          <br>
          <br>
          <%= f.submit "Update", class:"btn btn-md btn-default" %>
        <% end %>

    </div>
  </div>
</div>

