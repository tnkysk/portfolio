<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/profile', user: @user, bagel: @bagel %>
    </div>

    <div class="col-md-8">
      <h2>Bagels</h2>

      <% @user.bagels.each do |bagel| %>
        <div class="col-md-3 col-md-offset-1">
          <%= attachment_image_tag bagel, :image, format: 'jpeg', size: "200x150" %>
          <br>
          <%= link_to bagel.name, bagel_path(bagel.id) %>
          <br>
          【<%= bagel.store %>】
          <br>
          <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
          <%= bagel.favorites.count %>／コメント<%= bagel.post_comments.count %>件
          <br>
          <br>
        </div>
      <% end %>
    </div>

  </div>
</div>