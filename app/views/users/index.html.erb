<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/profile', user: @user, bagel: @bagel %>
    </div>

    <div class="col-md-8">
      <h2>Users</h2>

      <% @users.each do |user| %>
        <div class="col-md-2 col-md-offset-1">
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "150x150" ,class: "img-circle" %>
          <br>
          <%= link_to user.name, user_path(user.id) %>
          <br>
          <br>
        </div>
      <% end %>
    </div>

  </div>
</div>
