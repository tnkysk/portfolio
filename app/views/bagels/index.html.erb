<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/profile', user: @user, bagel: @bagel %>
    </div>

    <div class="col-md-8">
      <h2>Bagels</h2>

      <% @bagels.each do |bagel| %>
        <div class="col-md-3 col-md-offset-1">
          <%= attachment_image_tag bagel, :image, :fill, 200, 150 %>
          <br>
          <%= link_to bagel.name, bagel_path(bagel) %>
          <br>
          【<%= bagel.store %>】
          <br>
          <% if bagel.favorited_by?(current_user) %>
            <%= link_to bagel_favorites_path(bagel), method: :delete do %>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <%= bagel.favorites.count %>
            <% end %>
          <% else %>
            <%= link_to bagel_favorites_path(bagel), method: :post do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <%= bagel.favorites.count %>
            <% end %>
          <% end %>
          <br>
          <br>
        </div>
      <% end %>
    </div>

  </div>
</div>

